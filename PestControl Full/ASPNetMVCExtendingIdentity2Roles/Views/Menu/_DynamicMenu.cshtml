@model PestControl.Web.Models.DynamicMenuViewModel



<li @*class="active"*@><a href="@Url.Action("Index","Client")">Home</a></li>
@foreach (var menu in Model.Menus)
{
    <li class="dropdown">
        @if (menu.SubMenus.Count > 0)
        {
            <a href="@menu.Url" class="dropdown-toggle" data-toggle="dropdown">@menu.Name <b class="caret"></b></a>
            <ul class="dropdown-menu">
                @foreach (var submenu in menu.SubMenus)
                {
                    <li><a href="@submenu.Url">@submenu.Name</a></li>
                }
            </ul>
        }
        else
        {
            <a href="@menu.Url" class="dropdown-toggle" data-toggle="dropdown">@menu.Name</a>
        }
    </li>
}
