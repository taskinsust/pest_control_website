@model ASPNetMVCExtendingIdentity2Roles.Models.PaymentEditModel

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_MainPagePartialLayout.cshtml";
}
<div class="panel panel-primary" style="margin: 0 auto;width: 70%">
    <div class="panel-heading"><h4>Payment</h4></div>
    <div class="panel-body">
        <section id="contact-page" class="container">
            <div class="row-fluid">
                <div class="span8">

                    <div class="status alert alert-success" style="display: none"></div>
                    <div class="row-fluid">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
