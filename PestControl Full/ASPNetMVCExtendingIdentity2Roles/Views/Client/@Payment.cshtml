                                        @Html.EditorFor(model => model.Amount)
                                        @Html.ValidationMessageFor(model => model.Amount)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Invoice, new { @class = "control-label col-md-2" })
