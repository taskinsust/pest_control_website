@model PestControl.Web.Models.MenuAdminViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
    ViewBag.Title = "Account Settings";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Menu List
        <span style="float: right">
            @Html.ActionLink("ADD MENU", "menu/create", null, new { Style = "Color : White" })
        </span>
    </div>
    <div class="panel-body">
        <!-- Table -->
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.MenuList)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @if (item.IsDisable)
                        {
                            <a href="@Url.RouteUrl("ChangeMenuActivation", new { pageIndex = Model.MenuList.PageIndex, id = item.Id })">Disable</a>
                        }
                        else
                        {
                            <a href="@Url.RouteUrl("ChangeMenuActivation", new { pageIndex = Model.MenuList.PageIndex, id = item.Id })">Enable</a>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <nav>
            <ul class="pagination">
                @if (Model.MenuList.HasPreviousPage)
                {
                    <li>

                        <a href="@Url.RouteUrl("MenuAdminList", new { pageIndex = 0 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>

                    </li>
                }
                <li><a href="#" style="text-decoration:none; cursor:none">Showing @(Model.MenuList.PageIndex + 1) of @Model.MenuList.TotalPages</a></li>
                @if (Model.MenuList.HasNextPage)
                {
                    <li>

                        <a href="@Url.RouteUrl("MenuAdminList", new { pageIndex = Model.MenuList.PageIndex + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>

                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

    
