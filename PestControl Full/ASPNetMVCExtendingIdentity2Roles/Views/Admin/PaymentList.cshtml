@model PestControl.Web.Models.PaymentListViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
    ViewBag.Title = "All Payment";
}

<div class="panel panel-primary">

    <div class="panel-body">
        <!-- Table -->
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Invoice No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Card No</th>
                <th>Amount</th>
                <th>Created At</th>
            </tr>
            @foreach (var item in Model.Payments)
            {
                <tr>
                    <td>@item.InvoiceNo</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.CardNo</td>
                    <td>@String.Format("{0:C}", item.Amount)</td>
                    <td>@item.Date</td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <nav>
            <ul class="pagination">
                @if (Model.Payments.HasPreviousPage)
                {
                    <li>

                        <a href="@Url.RouteUrl("PaymentAdminList", new { pageIndex = 0 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>

                    </li>
                }
                <li>
                    <a href="#" style="text-decoration:none; cursor:none">Showing @(Model.Payments.PageIndex + 1) of @Model.Payments.TotalPages</a>
                </li>
                @if (Model.Payments.HasNextPage)
                {
                    <li>

                        <a href="@Url.RouteUrl("PaymentAdminList", new { pageIndex = Model.Payments.PageIndex + 1 })" aria-label="Next" style="float:right;">
                            <span aria-hidden="true">&raquo;</span>
                        </a>

                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

    
